<controls:MetroWindow x:Class="PassManager.Views.PassManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManager.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:viewmodels="clr-namespace:PassManager.ViewModels"
        d:DataContext="{d:DesignInstance viewmodels:PassManagerViewModel}"
        mc:Ignorable="d"
        Title="" Height="600" Width="900">
    <controls:MetroWindow.DataContext>
        <viewmodels:PassManagerViewModel />
    </controls:MetroWindow.DataContext>
    <controls:MetroWindow.Resources>
        <DataTemplate x:Key="MenuButtonTemplate">
            <Button Content="{Binding}" 
                    Margin="5" />
        </DataTemplate>
    </controls:MetroWindow.Resources>

    <materialDesign:DialogHost>
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.LeftDrawerContent >
                <DockPanel MinWidth="250">
                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                  DockPanel.Dock="Top"
                                  HorizontalAlignment="Right"
                                  IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked}" />
                    <ItemsControl ItemsSource="{Binding MenuButtonItems}"
                                  ItemTemplate="{StaticResource MenuButtonTemplate}" />
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel>
                <materialDesign:ColorZone DockPanel.Dock="Top"
                                          Padding="16"
                                          materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                          Mode="PrimaryMid">
                    <DockPanel>
                        <ToggleButton x:Name="MenuToggleButton" Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                      HorizontalAlignment="Left"
                                      IsChecked="False"/>
                    </DockPanel>
                </materialDesign:ColorZone>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</controls:MetroWindow>
